# Trading System Configuration
# Copy this to .env file and modify as needed

# Signal Processing
SIGNAL_COOLDOWN_MINUTES=5
SIGNAL_DEDUPE_TTL=300
MAX_SIGNALS_PER_CYCLE=5

# API Reliability
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1.0
API_RETRY_BACKOFF=2.0
API_TIMEOUT=30
MAX_API_FAILURES=10

# Performance Monitoring
PERFORMANCE_LOG_INTERVAL=300
CACHE_CLEANUP_INTERVAL=300

# Alert Thresholds
API_FAILURE_THRESHOLD=0.1
EXPOSURE_ALERT_THRESHOLD=0.5
DRAWDOWN_ALERT_THRESHOLD=0.05

# EOD Settings
EOD_EXIT_TIME=15:25
FORCE_CLOSE_ALL_EOD=true

# Optional: Telegram/Slack Integration
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
# SLACK_WEBHOOK_URL=your_webhook_url
